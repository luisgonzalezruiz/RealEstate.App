<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RealEstate.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RealEstate.App.Views"
    Shell.FlyoutBehavior="Disabled">

    <!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

    <TabBar>
        <!--  Home Page  -->
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <!--  Recently Watched Page  -->
        <Tab Title="Recently Viewed" Icon="pin.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <!--  Cart Page  -->
        <Tab Title="Cart" Icon="cart.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>

        <!--  Profile Page  -->
        <Tab Title="Account" Icon="profile.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
    </TabBar>

</Shell>
